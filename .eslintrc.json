{
  "extends": "next/core-web-vitals",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./tsconfig.json"]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]]
      },
      "extensions": [".ts", ".tsx"]
    }
  },
  "plugins": ["import"]
}
